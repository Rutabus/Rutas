<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center">

        <TextView
            android:id="@+id/tv_det_nombre_bus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:padding="8dp"
            android:text="Nombre de la empresa"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_det_ruc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:padding="8dp"
            android:text="RUC: 20163652201"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_det_razon_social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:padding="8dp"
            android:text="Razon Social"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/tv_det_direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:padding="8dp"
            android:text="Dirección de la empresa"
            android:textAlignment="textStart" />

        <TextView
            android:id="@+id/tv_det_rutas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:padding="8dp"
            android:text="Dirección de la empresa"
            android:textAlignment="textStart" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_lista_ruta"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:clickable="true"
            tools:listitem="@layout/item_ruta"
            tools:itemCount="2"
            tools:layoutManager="android.support.v7.widget.GridLayoutManager"
            tools:spanCount="2"
            android:visibility="visible"
            >
        </android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/im_det_bus"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_bus" />
    </LinearLayout>
